programa {
  funcao inicio() {
    inteiro numero1, numero2, soma, sub, divisao, multi
    escreva ("informe os numeros para somar-->>>", numero1, numero2)
    leia (numero1, numero2)

    soma = numero1 + numero2
    sub = numero1 - numero2
    multi = numero1 * numero2
    divisao = numero1 / numero2

    escreva ("\nsoma-->> ", soma)
    escreva ("\nsubtração-->> ", sub)
    escreva ("\nmultiplicaçao-->> ", multi)
    escreva ("\ndivisao-->> ", divisao)
  }
}
